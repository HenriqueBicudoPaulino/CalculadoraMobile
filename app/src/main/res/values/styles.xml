<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">24sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="DisplayText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">@dimen/display_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DisplayText.Expression">
        <item name="android:textSize">@dimen/expression_text_size</item>
    </style>

    <style name="DisplayText.Result">
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>