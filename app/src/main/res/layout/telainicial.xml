<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/background_dark"
    tools:context=".MainActivity">

    <!-- Área de Display -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/displayArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1A1A1A"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvExpression"
            style="@style/DisplayText.Expression"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/tvResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvResult"
            style="@style/DisplayText.Result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Botões Científicos -->
    <GridLayout
        android:id="@+id/gridScientificButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintTop_toBottomOf="@id/displayArea">

        <Button android:id="@+id/btnRad" 
            android:text="Rad" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnSin" 
            android:text="sin" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnCos" 
            android:text="cos" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnTan" 
            android:text="tan" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button android:id="@+id/btnSqrt" 
            android:text="√" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnPow" 
            android:text="^" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnPi" 
            android:text="π" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnE" 
            android:text="e" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>

    <!-- Teclado Numérico -->
    <GridLayout
        android:id="@+id/gridNumericButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/gridScientificButtons"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Primeira Linha (C, (), %, ÷) -->
        <Button android:id="@+id/btnClear" 
            android:text="C" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnParenLeft" 
            android:text="(" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnParenRight" 
            android:text=")" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnDiv" 
            android:text="÷" 
            style="@style/CalcButton.Operator"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <!-- Segunda Linha (7, 8, 9, ×) -->
        <Button android:id="@+id/btn7" 
            android:text="7" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn8" 
            android:text="8" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn9" 
            android:text="9" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnMul" 
            android:text="×" 
            style="@style/CalcButton.Operator"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <!-- Terceira Linha (4, 5, 6, -) -->
        <Button android:id="@+id/btn4" 
            android:text="4" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn5" 
            android:text="5" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn6" 
            android:text="6" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnSub" 
            android:text="-" 
            style="@style/CalcButton.Operator"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <!-- Quarta Linha (1, 2, 3, +) -->
        <Button android:id="@+id/btn1" 
            android:text="1" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn2" 
            android:text="2" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btn3" 
            android:text="3" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnAdd" 
            android:text="+" 
            style="@style/CalcButton.Operator"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <!-- Quinta Linha (0, ., =) -->
        <Button android:id="@+id/btn0" 
            android:text="0" 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnDot" 
            android:text="." 
            style="@style/CalcButton.Number"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnDelete" 
            android:text="DEL" 
            style="@style/CalcButton.Function"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button android:id="@+id/btnEq" 
            android:text="=" 
            style="@style/CalcButton.Operator"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>