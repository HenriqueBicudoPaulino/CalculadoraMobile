<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!-- Display Section -->
    <LinearLayout
        android:id="@+id/displayContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="end"
            android:textColor="#000000"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="end"
            android:textColor="#000000"
            android:padding="4dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Main Content with Scientific Functions on Left and Calculator on Right -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/displayContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Scientific Functions Panel -->
        <LinearLayout
            android:id="@+id/scientificPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funções Científicas"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666"
                android:paddingBottom="4dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="7"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/btnSin"
                    android:text="@string/button_sin"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnCos"
                    android:text="@string/button_cos"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnTan"
                    android:text="@string/button_tan"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnPower"
                    android:text="@string/button_power"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnSqrt"
                    android:text="@string/button_sqrt"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnLog"
                    android:text="@string/button_log"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnLn"
                    android:text="@string/button_ln"
                    style="@style/CalcButton.Scientific"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>
            </GridLayout>
        </LinearLayout>

        <!-- Standard Calculator Panel -->
        <LinearLayout
            android:id="@+id/calculatorPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:paddingStart="4dp">

            <!-- Top Row Buttons (Clear, Parentheses, Percent, Delete) -->
            <GridLayout
                android:id="@+id/gridNewButtons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="4"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/btnClear"
                    android:text="@string/button_clear"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnParentheses"
                    android:text="@string/button_parentheses"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnPercent"
                    android:text="@string/button_percent"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:text="@string/button_del"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>
            </GridLayout>

            <!-- Main Number and Operator Buttons -->
            <GridLayout
                android:id="@+id/gridButtons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:columnCount="4"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Row 1: 7, 8, 9, + -->
                <Button
                    android:id="@+id/btn7"
                    android:text="@string/button_7"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn8"
                    android:text="@string/button_8"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn9"
                    android:text="@string/button_9"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnAdd"
                    android:text="@string/button_add"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <!-- Row 2: 4, 5, 6, - -->
                <Button
                    android:id="@+id/btn4"
                    android:text="@string/button_4"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn5"
                    android:text="@string/button_5"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn6"
                    android:text="@string/button_6"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnSub"
                    android:text="@string/button_subtract"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <!-- Row 3: 1, 2, 3, * -->
                <Button
                    android:id="@+id/btn1"
                    android:text="@string/button_1"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn2"
                    android:text="@string/button_2"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btn3"
                    android:text="@string/button_3"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnMul"
                    android:text="@string/button_multiply"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <!-- Row 4: 0, ., =, / -->
                <Button
                    android:id="@+id/btn0"
                    android:text="@string/button_0"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnDot"
                    android:text="@string/button_dot"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnEq"
                    android:text="@string/button_equals"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/btnDiv"
                    android:text="@string/button_divide"
                    style="@style/CalcButton"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"/>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
