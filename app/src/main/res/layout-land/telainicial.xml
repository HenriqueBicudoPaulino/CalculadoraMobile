<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#FFFFFF">

    <!-- Display Section -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="end"
        android:textColor="#666666"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="end"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvExpression"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResult"/>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Scientific Functions Column -->
        <GridLayout
            android:id="@+id/scientificPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:layout_marginEnd="6dp"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false">

            <!-- Row 1: sin, cos -->
            <Button
                android:id="@+id/btnSin"
                android:text="@string/button_sin"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnCos"
                android:text="@string/button_cos"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <!-- Row 2: tan, x^y -->
            <Button
                android:id="@+id/btnTan"
                android:text="@string/button_tan"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnPower"
                android:text="@string/button_power"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <!-- Row 3: âˆš, log -->
            <Button
                android:id="@+id/btnSqrt"
                android:text="@string/button_sqrt"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnLog"
                android:text="@string/button_log"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <!-- Row 4: ln, C -->
            <Button
                android:id="@+id/btnLn"
                android:text="@string/button_ln"
                style="@style/CalcButton.Scientific"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnClear"
                android:text="@string/button_clear"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"/>
        </GridLayout>

        <!-- Main Calculator -->
                android:id="@+id/btnClear"
                android:text="@string/button_clear"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>
        </GridLayout>

        <!-- Main Calculator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <!-- Top Function Row -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="4"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false">

                <Button
                    android:id="@+id/btnParentheses"
                    android:text="@string/button_parentheses"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnPercent"
                    android:text="@string/button_percent"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:text="@string/button_del"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnDiv"
                    android:text="@string/button_divide"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>
            </GridLayout>

            <!-- Number and Operator Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:columnCount="4"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false">

                <!-- Row 1: 7, 8, 9, * -->
                <Button
                    android:id="@+id/btn7"
                    android:text="@string/button_7"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn8"
                    android:text="@string/button_8"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn9"
                    android:text="@string/button_9"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnMul"
                    android:text="@string/button_multiply"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <!-- Row 2: 4, 5, 6, - -->
                <Button
                    android:id="@+id/btn4"
                    android:text="@string/button_4"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn5"
                    android:text="@string/button_5"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn6"
                    android:text="@string/button_6"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnSub"
                    android:text="@string/button_subtract"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <!-- Row 3: 1, 2, 3, + -->
                <Button
                    android:id="@+id/btn1"
                    android:text="@string/button_1"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn2"
                    android:text="@string/button_2"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btn3"
                    android:text="@string/button_3"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnAdd"
                    android:text="@string/button_add"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <!-- Row 4: 0, ., = -->
                <Button
                    android:id="@+id/btn0"
                    android:text="@string/button_0"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="2"
                    android:layout_columnSpan="2"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnDot"
                    android:text="@string/button_dot"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/btnEq"
                    android:text="@string/button_equals"
                    style="@style/CalcButton.Landscape"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="3dp"/>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
